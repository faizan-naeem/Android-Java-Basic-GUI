<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".secondActivity"
    android:background="#FFFFFF">

    <LinearLayout
        android:id="@+id/ll1"
        android:layout_width="match_parent"
        android:layout_height="130dp"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:background="@drawable/abc">
    </LinearLayout>
    <ImageView
        android:id="@+id/img1"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_marginTop="80dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:src="@drawable/fb1"
        android:translationZ="50dp"></ImageView>
    <TextView
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:textColor="#80808080"
        android:text="5d"
        android:textSize="20sp"
        app:layout_constraintTop_toBottomOf="@id/ll1"
        app:layout_constraintRight_toRightOf="parent"></TextView>
    <TextView
        android:id="@+id/tv1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#000000"
        android:text="Software Engineer"
        android:textSize="25sp"
        app:layout_constraintTop_toBottomOf="@id/img1"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="10dp"></TextView>
    <TextView
        android:id="@+id/tv2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#000000"
        android:text="Facebook"
        android:textSize="20sp"
        app:layout_constraintTop_toBottomOf="@id/tv1"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"></TextView>
    <LinearLayout
        android:id="@+id/ll2"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@drawable/underlinelayout"
        app:layout_constraintTop_toBottomOf="@id/tv2"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        >
        <TextView
            android:layout_marginLeft="115dp"
            android:id="@+id/tv3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#80808080"
            android:text="San Francisco, CA"
            android:textSize="15sp"></TextView>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll3"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:orientation="horizontal"
        android:background="@drawable/underlinelayout"
        app:layout_constraintTop_toBottomOf="@id/ll2"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        >
        <TextView
            android:layout_width="113dp"
            android:layout_height="55dp"
            android:text="@string/Jobs"
            android:textColor="#000000"
            android:textSize="15sp"
            android:paddingTop="17dp"
            android:paddingLeft="35dp"
            android:background="@drawable/underline"></TextView>
        <TextView
            android:layout_width="113dp"
            android:layout_height="55dp"
            android:text="@string/Companies"
            android:textColor="#00CCFF"
            android:textSize="15sp"
            android:paddingTop="15dp"
            android:paddingLeft="5dp"></TextView>
        <TextView
            android:layout_width="113dp"
            android:layout_height="55dp"
            android:text="@string/Salaries"
            android:textColor="#00CCFF"
            android:textSize="15sp"
            android:paddingTop="15dp"
            android:paddingLeft="25dp"></TextView>
    </LinearLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/ll3"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:text="Facebook is a website which allows users, who sign-up for free profiles, to connect with friends, work colleagues or people they don't know, online. It allows users to share pictures, music, videos, and articles, as well as their own thoughts and opinions with however many people they like."
        android:textSize="15sp"
        android:textColor="#000000"
        android:padding="10dp"></TextView>
</androidx.constraintlayout.widget.ConstraintLayout>