<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".thirdActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Relative Layout Demo"
            android:textSize="20sp"
            android:textColor="#000000"
            android:gravity="center"
            android:layout_marginTop="20dp"
            android:id="@+id/head"></TextView>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="First Name"
            android:textSize="20sp"
            android:textColor="#000000"
            android:gravity="center"
            android:layout_marginTop="40dp"
            android:id="@+id/firstname"
            android:layout_below="@+id/head"></TextView>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Last Name"
            android:textSize="20sp"
            android:textColor="#000000"
            android:gravity="center"
            android:layout_marginTop="50dp"
            android:id="@+id/lastname"
            android:layout_below="@id/firstname"></TextView>
        <EditText
            android:layout_width="150dp"
            android:layout_height="50dp"
            android:id="@+id/firstnameedit"
            android:layout_below="@id/head"
            android:layout_toRightOf="@id/firstname"
            android:layout_marginLeft="40dp"
            android:layout_marginTop="30dp"></EditText>
        <EditText
            android:id="@+id/lastnameedit"
            android:layout_width="150dp"
            android:layout_height="50dp"
            android:layout_below="@id/firstnameedit"
            android:layout_toRightOf="@id/lastname"
            android:layout_marginLeft="40dp"
            android:layout_marginTop="30dp"></EditText>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Age"
            android:textSize="20sp"
            android:textColor="#000000"
            android:gravity="center"
            android:layout_marginTop="50dp"
            android:id="@+id/age"
            android:layout_below="@id/lastname"></TextView>
        <EditText
            android:layout_width="150dp"
            android:layout_height="50dp"
            android:id="@+id/ageedit"
            android:layout_below="@id/lastnameedit"
            android:layout_toRightOf="@id/age"
            android:layout_marginLeft="115dp"
            android:layout_marginTop="30dp"></EditText>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Qualification"
            android:textSize="20sp"
            android:textColor="#000000"
            android:gravity="center"
            android:layout_marginTop="50dp"
            android:id="@+id/qualification"
            android:layout_below="@id/age"></TextView>
        <EditText
            android:layout_width="150dp"
            android:layout_height="50dp"
            android:id="@+id/qualificationedit"
            android:layout_below="@id/ageedit"
            android:layout_toRightOf="@id/qualification"
            android:layout_marginLeft="35dp"
            android:layout_marginTop="30dp"></EditText>
        <Button
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:text="Show Toast"
            android:layout_below="@+id/qualification"
            android:layout_marginTop="50dp"
            android:background="#00FF00"
            android:gravity="center"
            android:layout_marginLeft="75dp"
            android:id="@+id/btn1"></Button>
        <Button
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:text="Previous Screen"
            android:layout_below="@+id/btn1"
            android:layout_marginTop="20dp"
            android:background="#0000FF"
            android:layout_marginLeft="75dp"
            android:id="@+id/btn2"></Button>
        <Button
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:text="First Screen"
            android:layout_below="@+id/btn2"
            android:layout_marginTop="20dp"
            android:background="#FF0000"
            android:layout_marginLeft="75dp"
            android:id="@+id/btn3"></Button>
    </RelativeLayout>
</androidx.constraintlayout.widget.ConstraintLayout>