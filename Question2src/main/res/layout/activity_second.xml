<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".secondActivity">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/logo"
        android:measureAllChildren="true">
        <ImageView
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:src="@drawable/faizan1"
            android:layout_marginTop="50dp"
            android:layout_marginLeft="100dp"></ImageView>
        <TextView
            android:background="#FFFFFF"
            android:layout_marginTop="220dp"
            android:id="@+id/txt1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Personal Address:"
            android:textSize="30sp"
            android:textColor="#000000"></TextView>
        <TextView
            android:background="#FFFFFF"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="280dp"
            android:text="607 Ravi Block Allama Iqbal Town Lahore"
            android:textSize="20sp"
            android:textColor="#000000"></TextView>
        <TextView
            android:background="#FFFFFF"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="350dp"
            android:text="Marital Status"
            android:textSize="30sp"
            android:textColor="#000000"></TextView>
        <TextView
            android:background="#FFFFFF"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="410dp"
            android:text="Single"
            android:textSize="20sp"
            android:textColor="#000000"></TextView>
        <Button
            android:background="#00FF00"
            android:layout_width="300dp"
            android:layout_height="80dp"
            android:text="NEXT"
            android:layout_gravity="center"
            android:id="@+id/nextscreen"
            android:layout_marginTop="180dp"></Button>
        <Button
            android:background="#000000"
            android:textColor="#FFFFFF"
            android:layout_width="300dp"
            android:layout_height="80dp"
            android:text="Back"
            android:layout_gravity="center"
            android:id="@+id/prevscreen"
            android:layout_marginTop="270dp"></Button>
    </FrameLayout>
</androidx.constraintlayout.widget.ConstraintLayout>